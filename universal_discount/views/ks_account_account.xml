<odoo>
    <data>
        <record id="ks_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">ks.res.config.settings.view.form.inherit.account.discount</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="50"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='has_accounting_entries']" position="after">
                    <block title= "Universal Discount"> 
                        <setting help="Activate Universal discount on all modules."> 
                            <field name="ks_enable_discount"/>
                        </setting>
                    </block>
                    <block>
                        <setting string="Accounts" help="Set default Universal discount accounts for sale and purchase order.">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="ks_sales_discount_account" class="col-md-3 o_light_label"/>
                                    <field name="ks_sales_discount_account" required="ks_enable_discount == True"/>
                                </div>
                                <div class="row mt16">
                                    <label for="ks_purchase_discount_account" class="col-md-3 o_light_label"/>
                                    <field name="ks_purchase_discount_account" required="ks_enable_discount == True"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
